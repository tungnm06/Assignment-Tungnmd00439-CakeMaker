@using NewCakeMakerASP.NET.Models
@model Product
@{
    ViewBag.Title = "XemChiTiet";
    Layout = "~/Views/Layout/TrangChuLayout.cshtml";
}
<link href="~/Content/TrangChuLayoutCss/ChiTiet.css" rel="stylesheet" />

<div id="divAnhsp" style="margin-left:50px"><img src="@Url.Content("~/Image/"+Model.Image) "  width="500" height="500" /></div>

<div id="divThôngtinSp">


    <div >
        <h1 style="color:blue">@Model.Name </h1>
     
    </div>
    <div>Gía Bán : @Model.Prince VND</div>
    <div> Thông Tin Bánh :@Model.Description</div>
    <div class="action">
        @using (Html.BeginForm("GioHang", "GioHang", new { }))
        {
            <button class="add-to-cart btn btn-default" style="cursor:pointer; background-color:blue ;width:200px;height:80px;margin-bottom:20px"  type="submit">MUA NGAY</button>
        }
            @using (Html.BeginForm("ThemGioHang", "GioHang", new { @idProduct = Model.ProductId, @strURL = Request.Url.ToString() }))
            {
                <button class="add-to-cart btn btn-default" style="cursor:pointer; background-color:red;width:200px;height:80px" type="submit">THÊM GIỎI HÀNG</button>

            }
        </div>
</div>
